<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/bookshelf_empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/bookshelf_empty_icon"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_bookshelf_add_tip"
            android:textSize="15sp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/add_button"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#5FB236"
            android:text="@string/str_bookshelf_add_btn"
            android:textColor="#FFFFFF"
            android:textSize="13sp"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/bookshelf_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>