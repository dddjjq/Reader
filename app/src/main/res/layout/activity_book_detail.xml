<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BookDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <ImageView
            android:id="@+id/book_detail_image"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:src="@drawable/bookshelf_image_default"/>
        <LinearLayout
            android:id="@+id/book_detail_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/book_detail_image"
            android:layout_marginStart="15dp"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/book_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="test"/>
            <TextView
                android:id="@+id/book_detail_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:lines="1"
                android:text="test"/>
            <TextView
                android:id="@+id/book_detail_chapter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:lines="1"
                android:ellipsize="end"
                android:text="test"/>
            <TextView
                android:id="@+id/book_detail_reader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:lines="1"
                android:ellipsize="end"
                android:text="test"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>