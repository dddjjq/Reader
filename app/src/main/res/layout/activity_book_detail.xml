<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BookDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/book_detail_book_layout">
            <ImageView
                android:id="@+id/book_detail_image"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:src="@drawable/bookshelf_image_default"/>
            <LinearLayout
                android:id="@+id/book_detail_text_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/book_detail_image"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/book_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="元尊"/>
                <TextView
                    android:id="@+id/book_detail_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:lines="1"
                    android:text="天蚕土豆 | 东方玄幻 | 173万字"/>
                <TextView
                    android:id="@+id/book_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="23小时前"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_detail_book_layout"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <com.welson.reader.view.BookRedButton
                android:id="@+id/add_to_bookshelf_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
            <com.welson.reader.view.BookRedButton
                android:id="@+id/read_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>