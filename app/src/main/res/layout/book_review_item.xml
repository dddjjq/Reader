<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <ImageView
        android:id="@+id/book_review_item_image"
        android:layout_width="45dp"
        android:layout_height="60dp"
        android:src="@drawable/bookshelf_image_default"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/book_review_item_image"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/book_review_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亵渎[玄幻奇幻]"
            android:textSize="13sp"
            android:textColor="#9F9674"/>
        <TextView
            android:id="@+id/book_review_item_content"
            android:layout_below="@id/book_review_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亵渎结局"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#000000"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_review_item_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/book_review_item_zan"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:gravity="center_vertical"
                android:src="@drawable/book_detail_hot_review_zan"/>
            <TextView
                android:id="@+id/book_review_item_recommend_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:text="39人推荐"/>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/book_review_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
        android:text="昨天" />
</RelativeLayout>