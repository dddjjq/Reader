<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/discover_item_background"
        android:padding="15dp"
        android:id="@+id/rank_collapse_layout">
        <ImageView
            android:id="@+id/rank_collapse_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_rank_collapse"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/rank_collapse_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/str_rank_others"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginStart="20dp"/>
        <ImageView
            android:id="@+id/rank_collapse_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:src="@drawable/rank_collapse_not_select"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rank_collapse_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:visibility="gone"/>
</LinearLayout>