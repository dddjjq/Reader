<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:id="@+id/rank_detail_item"
    android:clickable="true"
    android:background="@drawable/bookshelf_item_background">
    <ImageView
        android:id="@+id/rank_detail_image"
        android:layout_width="50dp"
        android:layout_height="65dp"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:id="@+id/rank_detail_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/rank_detail_image"
        android:layout_marginStart="15dp"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/rank_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/rank_detail_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:lines="1"/>
        <TextView
            android:id="@+id/rank_detail_chapter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:lines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/rank_detail_reader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:lines="1"
            android:ellipsize="end"/>
    </LinearLayout>
</RelativeLayout>