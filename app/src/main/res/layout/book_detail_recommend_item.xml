<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">
    <ImageView
        android:id="@+id/detail_recommend_image"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/detail_recommend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/detail_recommend_image"
        android:layout_marginStart="15dp"
        android:textSize="15sp"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/detail_recommend_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/detail_recommend_image"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        android:layout_below="@id/detail_recommend_title"/>
    <TextView
        android:id="@+id/detail_recommend_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/detail_recommend_image"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="13sp"
        android:layout_below="@id/detail_recommend_author"/>
    <TextView
        android:id="@+id/detail_recommend_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/detail_recommend_image"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="13sp"
        android:layout_below="@id/detail_recommend_content"/>
</RelativeLayout>