<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">
    <com.welson.reader.view.CircleImageView
        android:id="@+id/detail_hot_review_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/bookshelf_image_default"/>
    <TextView
        android:id="@+id/detail_hot_review_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#A58D5E"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/detail_hot_review_image"
        android:text="追书家的眼镜娘 lv.10"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/detail_hot_review_title"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/detail_hot_review_image"
        android:layout_below="@id/detail_hot_review_author"
        android:textColor="#000000"
        android:textSize="15sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="说说难忘的考试经历，你到底经历了什么？"/>
    <RatingBar
        android:id="@+id/detail_hot_review_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:numStars="5"
        android:rating="1.5"
        android:progressTint="#F08D43"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_toEndOf="@id/detail_hot_review_image"
        android:layout_below="@id/detail_hot_review_title" />
    <TextView
        android:id="@+id/detail_hot_review_content"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/detail_hot_review_image"
        android:layout_below="@id/detail_hot_review_rating"
        android:textSize="13sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="说说难忘的考试经历，你到底经历了什么？"/>
    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/detail_hot_review_image"
        android:layout_below="@id/detail_hot_review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/detail_hot_review_zan_image"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/book_detail_hot_review_zan"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/detail_hot_review_zan_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c0c0c0"
            android:layout_marginStart="5dp"
            android:textSize="12sp"/>
    </LinearLayout>
</RelativeLayout>